          "minecraft:material_instances": {
            "*": {
              "texture": "rs_controller_off",
              "render_method": "alpha_test",
              "ambient_occlusion": false
            }
          }
        }
      },
      {
        "condition": "query.block_property(\u0027refinedstorage:enabled\u0027) \u003d\u003d 1",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "rs_controller",
              "render_method": "alpha_test",
              "ambient_occlusion": false
            }
          }
        }
