{
  "format_version": "1.20.10",
  "minecraft:block": {
    "description": {
      "identifier": "refinedstorage:controller",
      "menu_category": {
        "category": "items"
      },
      "properties": {
        "refinedstorage:enabled": [
          true,
          false
        ]
      }
    },
    "components": {
      "tag:refinedstorage:component": {},
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 1.5
      },
      "minecraft:destructible_by_explosion": {
        "explosion_resistance": 0.7
      },
      "minecraft:geometry": {
        "identifier": "geometry.controller"
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "rs_controller_off",
          "render_method": "alpha_test",
          "ambient_occlusion": false
        }
      },
      "minecraft:on_player_placing": {
        "event": "refinedstorage:component_placed"
      }
    },
    "events": {
      "refinedstorage:component_placed": {
        "set_block_property": {
          "refinedstorage:enabled": false
        }
      }
    },
    "permutations": [
      {
        "condition": "query.block_property(\u0027refinedstorage:enabled\u0027) \u003d\u003d 0",
